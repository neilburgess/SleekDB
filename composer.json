{
    "name": "neilburgess/sleekdb",
    "description": "SleekDB - A 30Kb NoSQL Database made using PHP",
    "keywords": [
        "framework",
        "nosql",
        "database",
        "flatfile",
        "php",
        "rest",
        "api",
        "micro",
        "SleekDB"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "rakibtg",
            "email": "rakibtg@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4.3",
        "spatie/phpunit-watcher": "^1.24.0"
    },
    "autoload": {
        "psr-4": {
            "SleekDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SleekDB\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit --testdox --stop-on-failure tests"
        ],
        "test:plain": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit --stop-on-failure tests"
        ],
        "test:coverage": [
            "Composer\\Config::disableProcessTimeout",
            "XDEBUG_MODE=coverage phpunit --coverage-html ./tests/coverage tests"
        ],
        "test:watch": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit-watcher watch < /dev/tty"
        ]
    }
}
